<div class="container section">
  <h2 class="indigo-text text-darken-4">Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <div class="field input-field">
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      <%= f.label :email %>
      <p class="<%= devise_error_messages? && !resource.errors.messages[:email].empty? ? 'red-text' : 'hide' %>">
        <%= !resource.errors.messages.empty? && !resource.errors.messages[:email].empty? ? "Email #{resource.errors.messages[:email][0]}" : "" %>
      </p>
    </div>


    <div class="field input-field">
      <%= f.password_field :password, autocomplete: "new-password" %>
      <%= f.label :password %>
      <p class="<%= devise_error_messages? && !resource.errors.messages[:password].empty? ? 'red-text' : 'hide' %>">
        <%= !resource.errors.messages.empty? && !resource.errors.messages[:password].empty? ? "Password #{resource.errors.messages[:password][0]}" : "" %>
      </p>
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
    </div>

    <div class="field input-field">
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      <%= f.label :password_confirmation %>
    </div>

    <div class="actions input-field">
      <%= f.submit "Sign up", class: "btn" %>
    </div>
  <% end %>

  <p>Already have an account? Please <%= render "devise/shared/links" %></p>
</div>

