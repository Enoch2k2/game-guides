          </div>
          <div class="card-content content-box">
            <span class="card-title"><%= klass.name %> - <%= klass.role %></span>
            <p><%= klass.description %></p>
          </div>
          <div class="card-action center">
            <%= link_to "VISIT", "#" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <div class="row section" id="casters">
    <h4 class="indigo-text text-darken-4 center">Casters</h4>
    <% @game.klasses.casters.each do |klass| %>
      <div class="col s12 m6 l4">
        <div class="card black white-text">
          <div class="card-image">
            <img src="<%= image_url(klass.image_url) %>" class="image-responsive">
          </div>
          <div class="card-content content-box">
            <span class="card-title"><%= klass.name %> - <%= klass.role %></span>
            <p><%= klass.description %></p>
          </div>
          <div class="card-action center">
            <%= link_to "VISIT", "#" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

<script>
  $(document).ready(function(){
    $('.tabs').tabs({swipeable: true, onShow: resizeTab});
    
    $( window ).resize(function() { resizeTab(); });
  });
</script>