<div class="container section">
  <h2 class="indigo-text text-darken-4 center">Games</h2>
  <div class="row">
    <% @games.each do |game| %>
      <div class="col s6">
        <div class="card black white-text">
          <div class="card-image">
            <img src="<%= image_url(game.image_url) %>" class="image-responsive">
          </div>
          <div class="card-content content-box">
            <span class="card-title"><%= game.name %></span>
            <p><%= game.description %></p>
          </div>
          <div class="card-action center">
            <%= link_to "VISIT", game.url, target: :_blank %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>